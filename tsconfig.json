{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",

    /* Experimental */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced */
    "incremental": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,

    /* Pathing */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"]
    }
  }
}
